pipeline {
    agent any
    
    parameters{
        string(name: 'image', defaultValue: '1.0.4' )
 
        //choice(name: 'STAGE', choices: ['PROD','DEV','QA']) 
    }
 //-------------------------------------------------------------------------------------------------
    environment{
       // GIT_RIPO = "https://github.com/soundiata12/Fullpipeline-project.git"
 
        DOCKER_VERSION = "${params.VERSION}"
 
        ENVIRON= "${params.STAGE}"
    }
 //--------------------------------------------------------------------------------------------------

    stages {
        stage('build image') {                                     //gilbert2kengni067
            steps {
                script{
                    // This step should not normally be used in your script. Consult the inline help for details.
                     withDockerRegistry(credentialsId: 'dockerhub_id') {
                     echo '==========Executing===================================================='
                     sh "docker build -t myapp:DOCKER_VERSION ." 
                     sh "docker tag myapp:DOCKER_VERSION gilbert2kengni067/myapp:DOCKER_VERSION"
                     sh "docker push gilbert2kengni067/myapp:DOCKER_VERSION"
                    }
                }
                
                
            }
        }
    }
}